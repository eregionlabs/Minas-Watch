{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://minaswatch.dev/schemas/incident.schema.json",
  "title": "Incident",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "status",
    "severity",
    "confidence_score",
    "location",
    "first_seen_at",
    "last_updated_at",
    "signal_ids",
    "reason_codes"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 240
    },
    "summary": {
      "type": "string",
      "maxLength": 4000
    },
    "status": {
      "type": "string",
      "enum": [
        "UNVERIFIED",
        "LIKELY",
        "CONFIRMED",
        "RESOLVED"
      ]
    },
    "severity": {
      "type": "string",
      "enum": [
        "P1",
        "P2",
        "P3"
      ]
    },
    "confidence_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "location": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "label",
        "lat",
        "lon"
      ],
      "properties": {
        "label": {
          "type": "string",
          "maxLength": 200
        },
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "lon": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      }
    },
    "first_seen_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "signal_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "reason_codes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "SINGLE_WEAK_SOURCE",
          "MULTI_SOURCE_CORROBORATION",
          "SOURCE_PLUS_SENSOR",
          "OFFICIAL_CONFIRMATION",
          "MANUAL_ANALYST_OVERRIDE"
        ]
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 80
      }
    }
  }
}
