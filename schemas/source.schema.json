{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://minaswatch.dev/schemas/source.schema.json",
  "title": "Source",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "type",
    "platform",
    "regions",
    "languages",
    "reliability_score",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "handle": {
      "type": "string",
      "maxLength": 200
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "string",
      "enum": [
        "eyewitness",
        "journalist",
        "official",
        "sensor",
        "analyst",
        "wire",
        "manual"
      ]
    },
    "platform": {
      "type": "string",
      "enum": [
        "x",
        "telegram",
        "rss",
        "api",
        "web",
        "internal"
      ]
    },
    "regions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      }
    },
    "languages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
      }
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 100
      }
    },
    "reliability_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "stats": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "total_claims",
        "confirmed_claims",
        "false_positive_claims",
        "avg_latency_seconds"
      ],
      "properties": {
        "total_claims": {
          "type": "integer",
          "minimum": 0
        },
        "confirmed_claims": {
          "type": "integer",
          "minimum": 0
        },
        "false_positive_claims": {
          "type": "integer",
          "minimum": 0
        },
        "avg_latency_seconds": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
